<div class="cfb-tab-content cfb-tab-layout cfb:hidden">
    <div class="cfb:grid cfb:grid-cols-1 lg:cfb:grid-cols-2 cfb:gap-6">
        <!-- Framework -->
        <div>
            <label for="framework" class="cfb:block cfb:text-sm cfb:font-medium cfb:text-gray-700 cfb:mb-2">
                Framework <span class="cfb:text-red-500 cfb:ml-1">*</span>
            </label>
            <select id="framework" name="settings[framework]" class="cfb:w-full cfb:px-3 cfb:py-2 cfb:border cfb:border-gray-300 cfb:rounded-lg focus:cfb:outline-none focus:cfb:ring-2 focus:cfb:ring-blue-500 focus:cfb:border-blue-500">
               {% for framework in settings.getAllowedFrameworkOptions() %}
                    <option value="{{ framework.value }}" {{ form.settings.framework == framework.value ? 'selected' }}>{{ framework.label }}</option>
                {% endfor %}
            </select>
            <p class="cfb:text-xs cfb:text-gray-500 cfb:mt-1">Choose the CSS framework for styling</p>
        </div>

        <div>
            <label for="form-outputFrameworkAssets" class="cfb:block cfb:text-sm cfb:font-medium cfb:text-gray-700 cfb:mb-2">
                Output Framework Assets
            </label>

            <div class="input ltr">
                <button type="button" id="form-outputFrameworkAssets" class="lightswitch {{ form.settings.outputFrameworkAssets ? 'on' }}" role="switch"
                        aria-checked="{{ form.settings.outputFrameworkAssets }}">
                    <div class="lightswitch-container" >
                        <div class="handle"></div>
                    </div>
                    <input type="hidden" name="settings[outputFrameworkAssets]" value="{{ form.settings.outputFrameworkAssets ? '1' }}">    </button>
            </div>
        </div>

        <!-- Icons -->
        {% if iconSets|length %}
            <div>
                <label for="iconSet" class="cfb:block cfb:text-sm cfb:font-medium cfb:text-gray-700 cfb:mb-2">
                    Icon Set
                </label>
                <select id="iconSet" name="settings[icons]" class="cfb:w-full cfb:px-3 cfb:py-2 cfb:border cfb:border-gray-300 cfb:rounded-lg focus:cfb:outline-none focus:cfb:ring-2 focus:cfb:ring-blue-500 focus:cfb:border-blue-500">
                    <option value="">No Icons</option>
                    {% for iconSet, name in iconSets %}
                        <option value="{{ iconSet }}" {{ form.settings.icons == iconSet ? 'selected' }}>{{ name }}</option>
                    {% endfor %}
                </select>
                <p class="cfb:text-xs cfb:text-gray-500 cfb:mt-1">Choose an icon set to use in your form</p>
            </div>
        {% endif %}
    </div>

    <!-- Form Orientation -->
    <div class="cfb:mt-6">
        <label class="cfb:block cfb:text-sm cfb:font-medium cfb:text-gray-700 cfb:mb-2">
            Field Orientation
        </label>
        <div class="cfb:flex cfb:gap-4 cfb:mb-2">
            <label class="cfb:flex cfb:items-center cfb:cursor-pointer">
                <input type="radio" name="settings[orientation]" value="horizontal" class="cfb:w-4 cfb:h-4 cfb:text-blue-600 cfb:border-gray-300 focus:cfb:ring-blue-500" {{ form.settings.orientation == 'horizontal' ? 'checked' }}>
                <span class="cfb:ml-2 cfb:text-sm cfb:text-gray-700">Horizontal</span>
            </label>
            <label class="cfb:flex cfb:items-center cfb:cursor-pointer">
                <input type="radio" name="settings[orientation]" value="vertical" class="cfb:w-4 cfb:h-4 cfb:text-blue-600 cfb:border-gray-300 focus:cfb:ring-blue-500" {{ form.settings.orientation == 'vertical' ? 'checked' }}>
                <span class="cfb:ml-2 cfb:text-sm cfb:text-gray-700">Vertical</span>
            </label>
        </div>
        <p class="cfb:text-sm cfb:font-light cfb:text-gray-500">Horizontal: label beside field. Vertical: label above field.</p>
    </div>

    <!-- Form Class -->
    <div class="cfb:mt-6">
        <label for="form-class" class="cfb:block cfb:text-sm cfb:font-medium cfb:text-gray-700 cfb:mb-2">
            Custom CSS Classes
        </label>
        <input value="{{ form.settings.class }}" type="text" id="form-class" name="settings[class]" placeholder="Enter additional CSS classes..." class="cfb:w-full cfb:px-3 cfb:py-2 cfb:border cfb:border-gray-300 cfb:rounded-lg focus:cfb:outline-none focus:cfb:ring-2 focus:cfb:ring-blue-500 focus:cfb:border-blue-500">
        <p class="cfb:text-xs cfb:text-gray-500 cfb:mt-1">Add custom CSS classes to style your form</p>
    </div>
</div>