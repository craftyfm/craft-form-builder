{% set paragraphs = message | split("\n") %}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>{{ subject }}</title>
</head>
<body style="font-family: Arial, sans-serif; background-color: #f7f7f7; padding: 20px; color: #333;">
<table width="100%" cellpadding="0" cellspacing="0" border="0" style="max-width: 600px; margin: 0 auto; background-color: #ffffff; border: 1px solid #e0e0e0;">
    <tr>
        <td style="padding: 20px;">
            {% for paragraph in paragraphs %}
                <p>{{ paragraph | replace({'\n': ' '}) | trim }}</p>
            {% endfor %}
            <p style="margin-top: 30px;">Please log in to the <a href="{{ submission.getCpUrl() }}">Submission</a> to review.</p>
        </td>
    </tr>
</table>
</body>
</html>
