{% set style = '' %}
{% if width %}
    {% set style = style ~ 'width:' ~ width ~ 'px;' %}
{% endif %}
{% if height %}
    {% set style = style ~ 'height:' ~ height ~ 'px;' %}
{% endif %}

<div class="cfb:flex cfb:justify-{{ field.align }} cfb:items-start ">
    <img
            {% if width %} width="{{ width }}"{% endif %}
            {% if height %} height="{{ height }}"{% endif %}
            src="{{ field.src }}"
            alt="{{ field.alt }}"
            style="{{ style }}"
            class="object-fill"
    />
</div>