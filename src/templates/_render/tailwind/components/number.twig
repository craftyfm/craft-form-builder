{% set id = field.id|default(field.handle) %}
{% set iconSvg = field.getIconSvg() %}
{% set value = attribute(submission, field.handle) ?? field.defaultValue ?? null %}
{% set errors = submission.getErrors(field.handle) %}

<div class="flex {{ orientation == 'horizontal' ? 'flex-row' : 'flex-col' }} ">
    <div class="mb-2 font-light flex-1">
        <div class="flex justify-between items-center">
            <label class="block text-sm font-medium text-gray-700" for="{{ id }}">
                {{ field.label }}
                {{ field.required ? '<span class="text-red-500 ml-1">*</span>' : '' }}
            </label>
        </div>
    </div>

    <div class="relative w-full flex-3">

        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
            <div class="w-5 h-5 text-gray-700 flex items-center justify-center">
                {{ iconSvg|raw }}
            </div>
        </div>


        <input id="{{ id }}"
               type="number"
               name="{{ field.handle }}"
               value="{{ value }}"
               placeholder="{{ field.placeholder }}"
               class="{{ field.icon ? 'pl-10' : 'pl-3' }} pr-3 py-2 w-full border border-gray-300 rounded-md bg-gray-50"
                {{ field.required ? 'required' }}
        >
        {% if field.desc %}
            <p class="text-sm font-light">{{ field.desc }}</p>
        {% endif %}
        {% if errors %}
            <p class="text-sm text-red-600 dark:text-red-500">
                {{ errors[0] }}
            </p>
        {% endif %}
    </div>
</div>