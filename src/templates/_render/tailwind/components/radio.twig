{% set id = field.id|default(field.handle) %}
{% set label = field.label %}
{% set required = field.required|default(false) %}
{% set description = field.desc %}
{% set name = field.handle %}
{% set errors = submission.getErrors(field.handle) %}
{% set value = attribute(submission, field.handle) ?? field.defaultValue ?? null %}


<div class="flex {{orientation == 'horizontal' ? 'flex-row' : 'flex-col'}} ">
    <div class="mb-2 font-light flex-1">
        <div class="flex justify-between items-center">
            <label class="block text-sm font-medium text-gray-700">
                {{ field.label }}
                {{ field.required ? '<span class="text-red-500 ml-1">*</span>' : ''}}
            </label>
        </div>
    </div>
    <div class="space-y-2 flex-3">
        {% for option in field.options %}
            <div class="flex items-center gap-2">
                <input type="radio" id="{{ id }}" name="{{ name }}" value="{{option.value}}"
                       class="border-gray-300"
                       {% if value == option.value %}checked{% endif %}
                       {% if loop.index == 1 and required %}required{% endif %}
                >
                <label for="{{ id }}" class="text-sm text-gray-700">{{option.name}}</label>
            </div>
        {% endfor %}
        {% if field.desc %}
            <p class="text-sm font-light">{{ field.desc }}</p>
        {% endif %}
        {% if errors %}
            <p class="text-sm text-red-600 dark:text-red-500">
                {{ errors[0] }}
            </p>
        {% endif %}
    </div>
</div>