{% set spacing = field.spacing %}
{% set resetStyle = field.resetStyle %}
{% set resetText = field.resetText %}
{% set submitStyle = field.submitStyle %}
{% set submitText = field.submitText %}

{% set resetClass = field.resetStyle == 'primary'
    ? 'bg-blue-600 text-white'
    : field.resetStyle == 'secondary'
    ? 'bg-gray-500 text-white'
    : 'bg-red-500 text-white' %}
{% set submitClass = 'primary'
    ? 'bg-blue-600 text-white'
    : 'bg-gray-600 text-white' %}
{% set spacingClass = field.spacing == 'wide'
    ? 'justify-between'
    : field.spacing == 'tight'
    ? 'gap-2'
    : 'gap-4' %}


<div class="flex {{ spacingClass }}">
    <button type="reset" class="px-3 py-1 rounded-sm text-sm cursor-pointer {{ resetClass }}">
        {{ field.resetText }}
    </button>
    <button type="submit" class="px-3 py-1 rounded-sm text-sm cursor-pointer  {{ submitClass }}">
        {{field.submitText}}
    </button>
</div>